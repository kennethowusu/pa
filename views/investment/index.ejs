<%-include('../account/header')%>



<div class="row gap-20 masonry pos-r">


<%if(user.investment.investment_status=='active' && user.investment.investment_type){%>

  <div class="masonry-item col-md-6">
    <div class="bgc-white p-20 bd">

        <%if(user.finance.investment_type == 'gold-plan'){%>
              <h3 class="text-center">Gold Package</h3>
        <%}else if(user.finance.investment_type == 'diamond-plan'){%>
              <h3 class="text-center">Diamond Package</h3>
        <%}else if(user.finance.investment_type == 'platinum-plan'){%>
                <h3 class="text-center">Platinum Package</h3>
        <%}%>

    </div>
  </div>

  <div class="masonry-item col-md-6">
    <div class="bgc-white p-20 bd">
      <p class="text-right">Total Funds</p>
      <p class="text-right" style="font-size:1.4rem">Principal + Interest</p>
      <p class="font-weight-bold text-right" style="font-size:1.2rem;color:#2b2b2b">$<%=money.add(user.finance.principal,user.finance.interest)%></p>
    </div>
  </div>


<%}else{%>
  <div class="masonry-item col-md-12">
    <div class="bgc-white p-20 bd">

        <h3 class="text-center">Choose an Investment package</h3>

    </div>
  </div>







    <div class="masonry-sizer col-md-6"></div>
    <div class="masonry-item  w-100">
      <div class="row gap-20">
        <!-- #Toatl Visits ==================== -->
        <div class='col-md-4'>
          <div class="layers bd bgc-white p-20">
            <div class="layer w-100 mB-10">
              <h5 class="text-center">Gold</h5>
            </div>

            <div class="d-flex w-100">
              <p class="mr-auto">Minimum</p>
              <p>$1,000.00</p>
            </div>

            <div class="d-flex w-100">
              <p class="mr-auto">Maximum</p>
              <p>$4,999.00</p>
            </div>

            <div class="d-flex w-100">
              <p class="mr-auto">Weekly Profit</p>
              <p>5%</p>
            </div>
            <div class="d-flex w-100">
              <p class="mr-auto">Withdrawal</p>
              <p>Every two weeks</p>
            </div>

            <div class="w-100">
              <button type="button" class="btn btn-success w-100" id="goldBtn">Apply</button>
            </div>
          </div>
        </div>


        <div class='col-md-4'>
          <div class="layers bd bgc-white p-20">
            <div class="layer w-100 mB-10">
              <h5 class="text-center">Diamond</h5>
            </div>

            <div class="d-flex w-100">
              <p class="mr-auto">Minimum</p>
              <p>$5,000.00</p>
            </div>

            <div class="d-flex w-100">
              <p class="mr-auto">Maximum</p>
              <p>$9,999.00</p>
            </div>

            <div class="d-flex w-100">
              <p class="mr-auto">Weekly Profit</p>
              <p>5.5%</p>
            </div>
            <div class="d-flex w-100">
              <p class="mr-auto">Withdrawal</p>
              <p>Every two weeks</p>
            </div>

            <div class="w-100">
              <button type="button" class="btn btn-success w-100" id="diamondBtn">Apply</button>
            </div>
          </div>
        </div>


        <div class='col-md-4'>
          <div class="layers bd bgc-white p-20">
            <div class="layer w-100 mB-10">
              <h5 class="text-center">Platinum</h5>
            </div>

            <div class="d-flex w-100">
              <p class="mr-auto">Minimum</p>
              <p>$10,000.00</p>
            </div>

            <div class="d-flex w-100">
              <p class="mr-auto">Maximum</p>
              <p>No Limit</p>
            </div>

            <div class="d-flex w-100">
              <p class="mr-auto">Weekly Profit</p>
              <p>6%</p>
            </div>
            <div class="d-flex w-100">
              <p class="mr-auto">Withdrawal</p>
              <p>Every two weeks</p>
            </div>

            <div class="w-100">
              <button type="button" class="btn btn-success w-100" id="platinumBtn">Apply</button>
            </div>
          </div>
        </div>



      </div>
    </div>

<%}%>







</div>
<script src="https://cdn.jsdelivr.net/npm/clipboard@2/dist/clipboard.min.js"></script>
<%-include('../account/footer')%>
