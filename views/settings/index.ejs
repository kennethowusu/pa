<%-include('../account/header')%>



<div class="row gap-20 masonry pos-r">

  <div class="masonry-item col-md-6">
    <div class="bgc-white p-20 bd">
      <h6 class="c-grey-900">Change Password</h6>
      <div class="mT-30">
        <form>
          <div class="form-group">
            <label for="currentPassword">Current Password</label>
            <input type="password" class="form-control " id="currentPassword" placeholder="Enter Current Password">
            <label class="error emptyCurrentP"></label>
          </div>
          <div class="form-group">
            <label for="newPassword">New Password</label>
            <input type="password" class="form-control" id="newPassword" placeholder="Enter New Password">
            <label class="error emptyNewP"></label>
          </div>

          <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password">
            <label class="error emptyConfirmP passwordInvalid"></label>
          </div>

          <button type="submit" class="btn btn-primary" id="changePasswordBtn">Change Password</button>
        </form>
      </div>
    </div>
  </div>




</div>

<%-include('../account/footer')%>
