                            <%}%>
                              <!-- <div class="peer mR-15">
                                <img class="w-3r bdrs-50p" src="https://randomuser.me/api/portraits/men/1.jpg" alt="">
                              </div> -->
                              <div class="peer peer-greed singleNotePreview" noteid="<%=notification.id%>">
                                <span class="singleNotePreview" noteid="<%=notification.id%>">
                                  <span class="fw-500  singleNotePreview" noteid="<%=notification.id%>"><%=notification.topic%></span>
                                  <!-- <span class="c-grey-600">liked your <span class="text-dark">post</span>
                                  </span> -->
                                </span>
                                <p class="m-0  singleNotePreview" noteid="<%=notification.id%>">
                                  <small class="fsz-xs"><%=moment(notification.createdAt).fromNow()%></small>
                                </p>
                              </div>
                            </a>
                          <%})%>
                        <%}%>
                      </li>


                    </ul>
                  </li>
                  <li class="pX-20 pY-15 ta-c bdT">
                    <span>
                      <a href="/account/notifications" class="c-grey-600 cH-blue fsz-sm td-n">View All Notifications <i class="ti-angle-right fsz-xs mL-10"></i></a>
                    </span>
                  </li>
                </ul>
              </li>

              <li class="dropdown">
