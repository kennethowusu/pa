          <div class="header-container">
            <ul class="nav-left mobile-toggle" >
              <li>
                <a id='sidebar-toggle' class="sidebar-toggle" href="javascript:void(0);">
                  <i class="ti-menu"></i>
                </a>
              </li>


            </ul>
            <ul class="nav-right">
              <li class="notifications dropdown" id="notificationHand">
                <%if(user.is_read == '0'){%>
                  <%var newMessageCount = 0;
                    notifications.forEach(function(notification){
                      if(notification.is_read == '0'){
                        newMessageCount +=1;
                      }
                    })
                  %>
                  <span class="counter bgc-red" id="notificationCount"><%=newMessageCount%></span>
                <%}%>
                <a href="" class="dropdown-toggle no-after" data-toggle="dropdown">
                  <i class="ti-bell"></i>
                </a>

                <ul class="dropdown-menu centerNotification">
                  <li class="pX-20 pY-15 bdB">
                    <i class="ti-bell pR-10"></i>
                    <span class="fsz-sm fw-600 c-grey-900">Notifications</span>
                  </li>
                  <li class="m-0 " id="w-100">
                    <ul class="ovY-a pos-r scrollable lis-n p-0 m-0 fsz-sm">
                      <li>
                        <%if(notifications){%>
                          <%notifications.forEach(function(notification){%>
                            <%if(notification.is_read == '0'){%>
                                <a href="/account/notifications/<%=notification.id%>" noteid="<%=notification.id%>" class=' singleNotePreview unread peers fxw-nw td-n p-20 bdB c-grey-800 cH-blue bgcH-grey-100'>

                            <%}else{%>
