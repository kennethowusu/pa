              <a class="sidebar-link" href="/account/settings">
                <span class="icon-holder">
                    <i class="c-pink-500 ti-settings"></i>
                  </span>
                <span class="title">Settings</span>
              </a>
            </li>




          </ul>
        </div>
      </div>

      <!-- #Main ============================ -->
