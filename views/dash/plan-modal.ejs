<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close modal-plan-close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Please enter an amount to continue</p>
        <div class="form-group grid-margin  p-md-3">
            <label for="card-amount">Amount</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
            </div>
            <input type="text" class="form-control amount" id="card-amount" aria-label="Amount (to the nearest dollar)">
              <div class="input-group-append">
                  <span class="input-group-text">.00</span>
              </div>
            </div>
        </div>
      </div>
      <div class="">
        <p class="text-danger error-message pl-3"></p>
      </div>
      <div class="modal-footer">
        <input type="hidden" class="plan-type" error-message="" name="" value="">
        <button type="button" class="btn btn-primary plan-proceed-link">Continue</button>
        <button type="button" class="btn btn-secondary modal-plan-close" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
